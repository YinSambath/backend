<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Admin Page</title>
    <link rel="stylesheet" href="../Assets/stylesheet_layout/styleAdmin.css">
    <script src="https://kit.fontawesome.com/a15a5a5781.js" crossorigin="anonymous"></script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
</head>
<body>
    <nav class="navbar" >
        <div class="brand-title">Palace Cinema</div>
        <a href="#" class="toggle-button">
          <span class="bar"></span>
          <span class="bar"></span>
          <span class="bar"></span>
        </a>
        <div class="navbar-links">
          <ul>
            <li><a href="#"><i class="far fa-user-circle"></i></a></li>
            <li><a href="#">name-user</a></li>
            <li><a href="#">Log out</a></li>
            
          </ul>
        </div>
    </nav>

    <div class="flexbox-container">
        <div class="flexbox-item flexbox-item-1" >
            <button style="width:100%; height:50px;">Movies</button>
            <br>
            <a href="/admin/users">
            <button style="width:100%; height:50px;">Users</button>
            </a>  
            <a href="/admin/create-movie">
            <button style="width:100%; height:50px;">Upload Movie</button>
            </a>
            
            
        </div>
        <div class="flexbox-item flexbox-item-2">
            <table class="table">
                <thead>
                    <th>ID</th>
                    <th>Title</th>
                    <th>Genre</th>
                    <th>Rating</th>
                    <th>Action</th>
                </thead>
                <tbody>
                    <% movies.forEach(function(movie) { %>
                    <tr>
                        <td data-label="ID"></td>
                        <td data-label="Title"> <%= movie.title%></td>
                        <td data-label="Genre"><%= movie.genre%></td>
                        <td data-label="Rating"><%= movie.rating%><i class="fas fa-star"></i></td>
                        <td data-label="Action">
                            <i class="fas fa-edit"></i>
                            &nbsp;&nbsp;&nbsp;
                            <i class="fas fa-trash"></i>
                        </td>
                    </tr>              
                    <% }); %>
                </tbody>
                
          </table>
            



        </div>
    
    
    </div>

    <script type="text/javascript" src="../Assets/stylesheet_layout/script.js"></script>

</body>
</html>